@model IEnumerable<MSIP_App.Models.Urls>

@{
    ViewData["Title"] = "Site Library";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <body class="view" style="
        background-image: url('content/images/homepagewallpaper.jpg');
        background-repeat: no-repeat;
        background-size: 100%;
        background-position: center center;">

        @foreach (var item in Model)
        {

            if (item.Name == "Embry-Riddle")
            {
                <div class="rounded float-left m-3 p-3" style="width: 25%; height: 25%">
                    <a href="@Html.DisplayFor(modelItem => item.Url)" target="_blank"><img src="~/Content/images/EmbryRiddleHomePage.png" class="img-responsive img-thumbnail" width="100%" /></a>
                </div>
            }

            if (item.Name == "Microsoft Military Education Portal")
            {
                <div class="rounded float-left m-3 p-3" style="width: 25%; height: 25%">
                    <a href="@Html.DisplayFor(modelItem => item.Url)" target="_blank"><img src="~/Content/images/MicrosoftMilitaryPortal.jpg" class="img-responsive img-thumbnail" width="100%" /></a>
                </div>
            }

            if (item.Name == "Skillpipe")
            {
                <div class="rounded float-left m-3 p-3" style="width: 25%; height: 25%">
                    <a href="@Html.DisplayFor(modelItem => item.Url)" target="_blank"><img src="~/Content/images/SkillPipe.png" class="img-responsive img-thumbnail" width="100%" /></a>
                </div>
            }
        }
    </body>
